{
  "name": "CSSsir",
  "version": "0.1",
  "manifest_version": 2,

  // Recommended
  "description": "CSS3 generator",
    //"default_locale": "en",
  "icons": {
      "128": "skin/images/128.png",
      "16": "skin/images/16.png",
      "48": "skin/images/48.png"
   },
  "browser_action": {
    "default_icon": "skin/images/19.png",
    "default_popup": "chrome/popup.html"
  },
  "options_page": "options.html",
  "update_url": "http://path/to/updateInfo.xml",
  "permissions": ["tabs"],
  "background": {
      "page": "chrome/main.html"
   }
}